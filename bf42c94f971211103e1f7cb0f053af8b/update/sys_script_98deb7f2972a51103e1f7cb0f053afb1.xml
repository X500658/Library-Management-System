        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	// Add your code here
	var array = current.borrowed_book.split(",");
	
	for(var i=0; i<array.length;i++){
// 		gs.info("Attempting to find book " +(i+1)+ ": "+array[i]);
		
		var books = new GlideRecord('x_898711_library_m_books');
		books.addQuery('sys_id', array[i]);
		books.query();
		
		while(books.next()){
			books.setValue('available_copies',(books.available_copies+1));
			books.update();
			gs.info(books.number+ "\nReturned book: " +books.title+ ", updated to " +books.available_copies +" available copies");
		}
	}
})(current, previous);]]></script>
